<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etShowNumber"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gray"
        android:baselineAligned="false"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="bottom|end"
        android:inputType="text"
        android:paddingRight="5dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buClean"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buClearEvent"
                android:text="AC"
                android:textColor="@color/black"
                app:cornerRadius="50dp"
                android:textSize="15dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buPluseminus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberClick"
                android:text="+/-"
                android:textSize="15dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buParsent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buParsentEvent"
                android:textSize="15dp"
                android:text="%" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buDiv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:onClick="buOperationEvent"
                android:textSize="15dp"
                android:textAlignment="center"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:textAlignment="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberClick"
                android:textSize="15dp"
                android:text="7" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberClick"
                android:textSize="15dp"
                android:text="8" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberClick"
                android:textSize="15dp"
                android:text="9" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buMulti"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:onClick="buOperationEvent"
                android:textSize="15dp"
                android:text="X" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberClick"
                android:textSize="15dp"
                android:text="4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberClick"
                android:textSize="15dp"
                android:text="5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberClick"
                android:textSize="15dp"
                android:text="6" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buMinus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:textSize="15dp"
                android:onClick="buOperationEvent"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberClick"
                android:textSize="15dp"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberClick"
                android:textSize="15dp"
                android:text="2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberClick"
                android:textSize="15dp"
                android:text="3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buAdd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:onClick="buOperationEvent"
                android:textSize="15dp"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="match_parent"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bu0"
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="2"
                android:onClick="buNumberClick"
                android:textSize="15dp"
                android:textAlignment="center"
                android:text="0" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buDot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="buNumberClick"
                android:textSize="15dp"
                android:text="." />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buEqualTo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:onClick="buEqaulEvent"
                android:text="="
                android:textSize="15dp"/>
        </TableRow>

    </TableLayout>

</LinearLayout>